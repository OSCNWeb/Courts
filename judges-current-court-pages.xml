permalink : Inetpub/Resources/templates/courts/judges-current.xml
---
{% assign judges = site.data.judges %}{% for judge in site.data.cross-jurisdication-judges %}{% assign judges = judges | push: judge %}{% endfor %}
{% assign filter-judges = judges | group_by: "id" %}<Judges>{% for item in filter-judges %}{% assign bio = site.pages | where: 'id', item.items[0].id%}<Judge ocisjudgeid="{{item.items[0].id}}" fname="{{item.items[0].fname}}" mname="{{item.items[0].mname}}" lname="{{item.items[0].lname}}" judgetitle="{{item.items[0].title}}" judgetype="{{item.items[0].type}}" profilepicture="{{item.items[0].image}}" sm="{{item.items[0].img-sm}}" md="{{item.items[0].img-md}}" lg="{{item.items[0].img-lg}}" biography="{%if bio.size > 0%}1{%else%}0{%endif%}">{% for entry in item.items %}<location county="{{entry.county}}" name="{{entry.address1}}" address="{{entry.address2}}" city="{{entry.city}}" state="{{entry.state}}" zipcode="{{entry.zipcode}}" district="{{entry.district}}" {%if entry.phone.size > 5 %}phone="{{entry.phone}}" {%endif%}station="{%if forloop.index > 1 %}secondary{%else%}primary{%endif%}" />{% endfor %}</Judge>{% endfor %}</Judges>